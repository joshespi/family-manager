{
    "name": "joshespi/family-manager",
    "description": "Web application for managing family tasks",
    "type": "project",
    "require": {
        "vlucas/phpdotenv": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\Models\\": "models/",
            "App\\Controllers\\": "controllers/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Models\\": "src/models/",
            "App\\Controllers\\": "src/controllers/"
        }
    },
    "require-dev": {
        "pestphp/pest": "^3.8.4",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "test": "pest"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
